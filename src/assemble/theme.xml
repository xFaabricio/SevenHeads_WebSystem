<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    
    <id>theme</id>
    <formats>
        <format>jar</format>
    </formats>
    
    <includeBaseDirectory>false</includeBaseDirectory>
    
    <fileSets>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-paradise-blue</directory>
            <outputDirectory>/META-INF/resources/primefaces-paradise-blue</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-paradise-deeppurple</directory>
            <outputDirectory>/META-INF/resources/primefaces-paradise-deeppurple</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-paradise-green</directory>
            <outputDirectory>/META-INF/resources/primefaces-paradise-green</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-paradise-lightblue</directory>
            <outputDirectory>/META-INF/resources/primefaces-paradise-lightblue</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-paradise-lime</directory>
            <outputDirectory>/META-INF/resources/primefaces-paradise-lime</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-paradise-orange</directory>
            <outputDirectory>/META-INF/resources/primefaces-paradise-orange</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-paradise-purple</directory>
            <outputDirectory>/META-INF/resources/primefaces-paradise-purple</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/resources/primefaces-paradise-turquoise</directory>
            <outputDirectory>/META-INF/resources/primefaces-paradise-turquoise</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${basedir}/src/main/webapp/WEB-INF</directory>
            <outputDirectory>/META-INF/</outputDirectory>
            <includes>
                <include>faces-config.xml</include>
                <include>primefaces-paradise.taglib.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${basedir}/target/classes</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>org/primefaces/paradise/component/*</include>
            </includes>
        </fileSet>
    </fileSets>
    
</assembly>